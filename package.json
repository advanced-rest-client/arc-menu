    "@anypoint-web-components/anypoint-menu-mixin": "^1.1.8",
    "@anypoint-web-components/anypoint-tabs": "^0.1.12",
    "@api-components/http-method-label": "^3.1.2",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-data-generator": "^3.1.12",
    "@advanced-rest-client/arc-demo-helper": "^2.2.0",
    "@advanced-rest-client/http-method-selector": "^3.0.5",
